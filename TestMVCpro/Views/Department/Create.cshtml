@model TestMVCpro.BLL.Models.DepartmentVM


@{
    ViewBag.Title = "Create";
}
<div class="block-header">
    <h2>Create</h2>
</div>
<form class="form-group" asp-controller="Department" asp-action="Create">
    <label asp-for="Name">Depatment Name</label>
    <input type="text" class="form-control" asp-for="Name">
    <span asp-validation-for="Name" class="text-danger"></span>
    <br /> <br />
    <label asp-for="Code">Depatment Code</label>
    <input type="text" class="form-control" asp-for="Code">
    <span asp-validation-for="Code" class="text-danger"></span>
    <br /> <br />
    <center>
        <input type="submit" value="Save" class="btn btn-primary">
        <input type="reset" value="Cancle" class="btn btn-danger">
    </center>
</form>
@section MicrosoftValidation
{
    <script src="~/plugins/jquery-validation/jquery.validate.js"></script>
    <script src="~/plugins/jquery-validation-unobtrusive/jquery.validate.unobtrusive.js"></script>

}
