@model TestMVCpro.BLL.Models.DepartmentVM

@{
    ViewBag.Title = "Department";
}
<div class="block-header">
    <h2>Update</h2>
</div>
<form class="form-group" asp-controller="Department" asp-action="Update">
    <input type="hidden" class="form-control" asp-for="ID">
    <label asp-for="Name">Depatment Name</label>
    <input type="text" class="form-control" asp-for="Name">
    <span asp-validation-for="Name" class="text-danger"></span>
    <br /> <br />
    <label asp-for="Code">Depatment Code</label>
    <input type="text" class="form-control" asp-for="Code">
    <span asp-validation-for="Code" class="text-danger"></span>
    <br /> <br />
    <center>
        <a asp-controller="Department" asp-action="Index" class="btn btn-primary">Back to Home</a>
        <a asp-controller="Department" asp-action="Delete" class="btn btn-primary" asp-route-ID="@Model.ID">Back to Delete</a>
        <input type="submit" value="Save" class="btn btn-primary">
        <input type="reset" value="Cancle" class="btn btn-danger">
    </center>
</form>
@section MicrosoftValidation
{
    <script src="~/plugins/jquery-validation/jquery.validate.js"></script>
    <script src="~/plugins/jquery-validation-unobtrusive/jquery.validate.unobtrusive.js"></script>

}