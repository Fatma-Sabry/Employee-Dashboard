@model TestMVCpro.BLL.Models.MailVM

@{
    ViewData["Title"] = "Mail";
}
<center>
    <h2>Send Mail</h2>
   <p> @TempData["MSG"]</p>

</center>
<form asp-controller="Mail" asp-action="Index" class="form-group">

    <label asp-for="Title">Title</label>
    <input class="form-control" asp-for="Title" placeholder=" Enter The Title">
    <br /><br />
    <label asp-for="Message">Message</label>
    <textarea rows="4" asp-for="Message" placeholder=" Enter Message" class="form-control"></textarea>
    <br />
    <center>
        <input type="submit" value=" Send" class="btn btn-primary">
    </center>
</form>
